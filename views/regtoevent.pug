    if(!isRegistered)
        script.
            var id=!{event.id}
            var wnd=null;
            function register() {
                 wnd=window.open("/login/"+id);

            }
            function registerSuccess(dt) {
               wnd.close();

               document.getElementById("btn").style.display="none"
                document.getElementById("usr").style.display="block"
                document.getElementById("f").innerHTML=dt.user.f
                document.getElementById("i").innerHTML=dt.user.i
            }
    if(isRegistered)
        script.
            document.getElementById("usr").style.display="block"