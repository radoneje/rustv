extends layout
block head
    //script(src="/javascripts/indexScript.js")
    style.
        body{
            font-family: 'Roboto', sans-serif;
            font-size: 12px;
            color: #333;
            background: white;
            margin: 10px;
            box-sizing: border-box;}
        .btn {
            background: #3D89E0;
            color: white;
            font-weight: bold;
            text-align: center;
            padding: 5px;
            cursor: pointer;
            border-radius: 2px;
            margin-top: 10px;
        }
        .usr {
            display: none;
            line-height: 1.5;
        }
        .usr span {
            margin-right: .5em;
        }

block content
