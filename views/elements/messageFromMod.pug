div.messageFromMod(v-if="messageFromMod.length>0")
    div.messageFromModTitle {{typeof(lang)!='undefined'?(lang[selLang].messageFromMod):('Сообщение от модератора')}}:
    div.messageFromModText {{messageFromMod}}
    div.messageFromModReply
        input.messageFromModReplyInput(type="text" v-on:keypress="if($event.keyCode==13) messageToMod()" :placeholder="typeof(lang)!='undefined'?(lang[selLang].replyPlaceholder):('Напишите здесь текст ответа')" v-model="messageToModText")
        div.greenBtn.clearBtn(style='display:inline-block' v-on:click="messageToMod()") {{typeof(lang)!='undefined'?(lang[selLang].reply):('Ответить')}}
        div.greenBtn.clearBtn(style='display:inline-block' v-on:click="messageFromMod=''") {{typeof(lang)!='undefined'?(lang[selLang].replyPlaceholder):('Закрыть')}}
